# Строй Дом - База данных
# Скопируйте этот файл в .env.local и заполните переменные

# PostgreSQL Connection String
# Формат: postgresql://[user]:[password]@[host]:[port]/[database]?sslmode=require

# Пример для локальной разработки:
DATABASE_URL="postgresql://postgres:password@localhost:5432/stroydom"

# Пример для Neon (https://neon.tech):
# DATABASE_URL="postgresql://user:password@ep-xxx-xxx.eu-central-1.aws.neon.tech/stroydom?sslmode=require"

# Пример для Supabase:
# DATABASE_URL="postgresql://postgres:password@db.xxx.supabase.co:5432/postgres"

# Пример для Vercel Postgres:
# DATABASE_URL="postgres://default:xxx@ep-xxx.eu-central-1.aws.neon.tech:5432/verceldb?sslmode=require"

# ==================== АВТОРИЗАЦИЯ ====================

# Telegram Bot для авторизации через Telegram
# Получить у @BotFather в Telegram
TELEGRAM_BOT_TOKEN="your_telegram_bot_token"

# Имя бота (без @) для виджета авторизации
NEXT_PUBLIC_TELEGRAM_BOT_USERNAME="YourBotName"
